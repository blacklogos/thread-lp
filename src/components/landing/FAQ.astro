---
const { content } = Astro.props;
---

<section id="faq" class="py-24 px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <div class="text-center mb-16 space-y-4">
      <h2 class="text-4xl lg:text-5xl font-display font-bold">Frequently Asked Questions</h2>
      <p class="text-xl text-text-secondary">Everything you need to know about Thread to HTML</p>
    </div>

    <div class="space-y-4">
      {content.map((item: any, index: number) => (
        <details class="group bg-dark-surface/50 backdrop-blur-sm rounded-xl border border-dark-border overflow-hidden" open={index === 0}>
          <summary class="flex items-center justify-between p-6 cursor-pointer hover:bg-dark-surface/80 transition-colors">
            <span class="text-lg font-semibold pr-8">{item.question}</span>
            <span class="text-threads-orange text-xl group-open:rotate-180 transition-transform">â–¼</span>
          </summary>
          <div class="px-6 pb-6 text-text-secondary leading-relaxed border-t border-dark-border pt-4">
            {item.answer}
          </div>
        </details>
      ))}
    </div>
  </div>
</section>
