---
const { content } = Astro.props;
---

<section class="faq">
  <div class="container">
    <div class="header">
      <h2>Frequently Asked Questions</h2>
      <p>Everything you need to know about Thread to HTML</p>
    </div>
    
    <div class="faq-items">
      {content.map((item: any, index: number) => (
        <details class="faq-item" open={index === 0}>
          <summary>{item.question}</summary>
          <div class="answer">{item.answer}</div>
        </details>
      ))}
    </div>
  </div>
</section>

<style>
  .faq {
    padding: 6rem 2rem;
    background: #f7f8fa;
  }
  
  .container {
    max-width: 900px;
    margin: 0 auto;
  }
  
  .header {
    text-align: center;
    margin-bottom: 4rem;
  }
  
  .header h2 {
    margin-bottom: 0.5rem;
  }
  
  .header p {
    font-size: 1.125rem;
    color: #65676b;
  }
  
  .faq-items {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .faq-item {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    overflow: hidden;
  }
  
  summary {
    padding: 1.5rem;
    cursor: pointer;
    font-weight: 600;
    user-select: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: background 0.2s;
  }
  
  summary:hover {
    background: #f7f8fa;
  }
  
  summary::after {
    content: "â–¼";
    font-size: 0.75rem;
    transition: transform 0.2s;
    transform-origin: center;
  }
  
  details[open] summary::after {
    transform: rotate(180deg);
  }
  
  .answer {
    padding: 0 1.5rem 1.5rem;
    color: #65676b;
    line-height: 1.6;
    border-top: 1px solid #e5e7eb;
  }
  
  @media (max-width: 768px) {
    .faq {
      padding: 4rem 1rem;
    }
    
    summary {
      padding: 1rem;
      font-size: 0.95rem;
    }
    
    .answer {
      padding: 0 1rem 1rem;
    }
  }
</style>
