---
const { content } = Astro.props;
---

<section id="features" class="py-24 px-6 lg:px-8 bg-dark-surface/30">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-16 space-y-4">
      <h2 class="text-4xl lg:text-5xl font-display font-bold">{content.title}</h2>
      <div class="text-xl text-text-secondary max-w-3xl mx-auto space-y-4">
        {content.subtitle.split('\n\n').map((paragraph: string) => (
          <p>{paragraph}</p>
        ))}
      </div>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {content.items.map((item: any, index: number) => (
        <div class="relative bg-dark-bg/50 backdrop-blur-sm rounded-2xl p-8 border border-dark-border group hover:border-accent-cyan/50 transition-all duration-300">
          <div class="absolute top-4 right-4 text-6xl font-bold text-text-muted/10">{index + 1}</div>

          <div class="relative space-y-4">
            <div class="text-5xl">{item.icon}</div>
            <h3 class="text-2xl font-display font-semibold">{item.title}</h3>
            <p class="text-text-secondary leading-relaxed">{item.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
