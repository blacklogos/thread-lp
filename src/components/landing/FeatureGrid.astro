---
const { content } = Astro.props;
---

<section id="features" class="features">
  <div class="container">
    <div class="header">
      <h2>{content.title}</h2>
      <p>{content.subtitle}</p>
    </div>
    
    <div class="grid">
      {content.items.map((item: any) => (
        <div class="feature">
          <div class="icon">{item.icon}</div>
          <h3>{item.title}</h3>
          <p>{item.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .features {
    padding: 6rem 2rem;
    background: white;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .header {
    text-align: center;
    margin-bottom: 4rem;
  }
  
  .header h2 {
    margin-bottom: 1rem;
  }
  
  .header p {
    font-size: 1.125rem;
    color: #65676b;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 3rem;
  }
  
  .feature {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .icon {
    font-size: 3rem;
    line-height: 1;
    width: fit-content;
  }
  
  .feature h3 {
    margin: 0;
    color: #000;
  }
  
  .feature p {
    margin: 0;
    font-size: 0.95rem;
    color: #65676b;
  }
  
  @media (max-width: 768px) {
    .features {
      padding: 4rem 1rem;
    }
    
    .grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>
