---
import { landingContent } from "../../content/landing";
const content = landingContent.finalCTA;
---

<section class="py-24 px-6 lg:px-8 bg-dark-surface/30 relative overflow-hidden">
  <!-- Gradient overlay -->
  <div class="absolute inset-0 bg-gradient-radial from-threads-orange/20 via-transparent to-transparent"></div>

  <div class="max-w-4xl mx-auto text-center relative z-10">
    <h2 class="text-4xl lg:text-6xl font-display font-bold mb-6">
      {content.title}
    </h2>
    <p class="text-xl lg:text-2xl text-text-secondary mb-12">
      {content.subtitle}
    </p>

    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <div class="space-y-2">
        <a href="https://chrome.google.com/webstore"
           class="inline-block px-10 py-5 bg-gradient-threads text-white rounded-xl font-semibold text-xl hover:shadow-glow transition-all duration-300 hover:scale-105"
           target="_blank"
           rel="noopener noreferrer">
          {content.primaryCTA}
        </a>
        {content.primaryMicrocopy && (
          <p class="text-sm text-text-muted">{content.primaryMicrocopy}</p>
        )}
      </div>

      <a href="https://github.com"
         class="inline-block px-10 py-5 border border-dark-border text-text-primary rounded-xl font-semibold text-xl hover:border-text-secondary transition-all duration-300"
         target="_blank"
         rel="noopener noreferrer">
        {content.secondaryCTA}
      </a>
    </div>
  </div>
</section>
