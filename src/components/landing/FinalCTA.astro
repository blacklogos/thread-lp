---
const { content } = Astro.props;
---

<section class="final-cta">
  <div class="container">
    <h2>{content.headline}</h2>
    <p>{content.subheadline}</p>
    
    <div class="ctas">
      <div class="cta-wrapper">
        <a href="https://chrome.google.com/webstore" class="primary-cta" target="_blank" rel="noopener noreferrer" data-track="cta-final-primary">
          {content.primaryCTA}
        </a>
        {content.primaryMicrocopy && (
          <p class="cta-microcopy">{content.primaryMicrocopy}</p>
        )}
      </div>
      <a href="https://github.com" class="secondary-cta" target="_blank" rel="noopener noreferrer" data-track="cta-final-github">
        {content.secondaryCTA}
      </a>
    </div>
  </div>
</section>

<style>
  .final-cta {
    padding: 6rem 2rem;
    background: var(--orange-gradient);
    color: white;
    text-align: center;
  }
  
  .container {
    max-width: 800px;
    margin: 0 auto;
  }
  
  h2 {
    margin-bottom: 1rem;
    color: white;
  }
  
  p {
    font-size: 20px;
    color: rgba(255, 255, 255, 0.95);
    margin-bottom: 2rem;
  }
  
  .ctas {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    align-items: flex-start;
  }

  .cta-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    position: relative;
    border: none;
    outline: none;
    background: transparent;
  }

  .cta-microcopy {
    font-size: 12px;
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
    font-style: italic;
  }
  
  .primary-cta, .secondary-cta {
    padding: 0.875rem 2rem;
    border-radius: 28px;
    font-weight: 600;
    font-size: 16px;
    transition: all 0.3s ease;
    cursor: pointer;
    border: 2px solid transparent;
    white-space: nowrap;
    outline: none;
    text-decoration: none;
    display: inline-block;
  }

  .primary-cta:focus,
  .secondary-cta:focus {
    outline: 2px solid rgba(255, 255, 255, 0.5);
    outline-offset: 2px;
  }
  
  .primary-cta {
    background: white;
    color: var(--orange-dark);
  }
  
  .primary-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.25);
  }
  
  .secondary-cta {
    background: transparent;
    color: white;
    border: 2px solid white;
  }
  
  .secondary-cta:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-2px);
  }
  
  @media (max-width: 768px) {
    .final-cta {
      padding: 4rem 1rem;
    }
    
    h2 {
      font-size: 28px;
    }
    
    p {
      font-size: 16px;
    }
    
    .ctas {
      flex-direction: column;
      align-items: center;
    }
    
    .primary-cta, .secondary-cta {
      width: 100%;
      max-width: 300px;
    }
  }
</style>
