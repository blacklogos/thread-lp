---
const { content } = Astro.props;
---

<footer class="bg-dark-bg border-t border-dark-border">
  <div class="max-w-7xl mx-auto px-6 lg:px-8 py-12">
    <div class="grid md:grid-cols-2 gap-8 items-start mb-8">
      <div class="space-y-3">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 bg-gradient-threads rounded-lg flex items-center justify-center shadow-glow">
            <span class="text-white font-bold text-xl">T</span>
          </div>
          <span class="font-display font-semibold text-xl">Thread to HTML</span>
        </div>
        <p class="text-text-muted text-sm">{content.tagline}</p>
        <p class="text-text-muted text-sm">{content.disclaimer}</p>
      </div>

      <div class="flex flex-wrap gap-6 md:justify-end">
        {content.links.map((link: any) => (
          <a href={link.href} class="text-text-secondary hover:text-text-primary transition-colors text-sm">
            {link.label}
          </a>
        ))}
      </div>
    </div>

    <div class="border-t border-dark-border pt-8 text-center text-text-muted text-sm">
      <p>&copy; 2025 Thread to HTML. Built with Astro.</p>
    </div>
  </div>
</footer>
