---
const { content } = Astro.props;
---

<section class="gallery">
  <div class="container">
    <div class="header">
      <h2>{content.title}</h2>
      <p>{content.subtitle}</p>
    </div>
    
    <div class="gallery-grid">
      {content.items.map((item: any) => (
        <div class="gallery-item">
          <div class="gallery-before">
            <div class="label">Before</div>
            <p>{item.before}</p>
          </div>
          <div class="arrow">â†’</div>
          <div class="gallery-after">
            <div class="label">After</div>
            <p>{item.after}</p>
          </div>
          <div class="category">{item.category}</div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .gallery {
    padding: 6rem 2rem;
    background: white;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .header {
    text-align: center;
    margin-bottom: 4rem;
  }
  
  .header h2 {
    margin-bottom: 1rem;
  }
  
  .header p {
    font-size: 1.125rem;
    color: #65676b;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  .gallery-item {
    background: linear-gradient(135deg, #f7f8fa 0%, #fff 100%);
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    padding: 1.5rem;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .gallery-item:hover {
    border-color: #0095f6;
    box-shadow: 0 12px 32px rgba(0, 149, 246, 0.15);
  }
  
  .gallery-before,
  .gallery-after {
    flex: 1;
    padding: 1rem;
    border-radius: 8px;
  }
  
  .gallery-before {
    background: #fee2e2;
    border-left: 3px solid #dc2626;
  }
  
  .gallery-after {
    background: #d1fae5;
    border-left: 3px solid #059669;
  }
  
  .label {
    font-weight: 600;
    font-size: 0.85rem;
    margin-bottom: 0.5rem;
  }
  
  .gallery-before .label {
    color: #991b1b;
  }
  
  .gallery-after .label {
    color: #065f46;
  }
  
  .gallery-before p {
    color: #7f1d1d;
    margin: 0;
    font-size: 0.9rem;
    line-height: 1.5;
  }
  
  .gallery-after p {
    color: #047857;
    margin: 0;
    font-size: 0.9rem;
    line-height: 1.5;
  }
  
  .arrow {
    text-align: center;
    font-size: 1.5rem;
    color: #0095f6;
    font-weight: bold;
  }
  
  .category {
    font-size: 0.8rem;
    background: #0095f6;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    width: fit-content;
    font-weight: 600;
  }
  
  @media (max-width: 768px) {
    .gallery {
      padding: 4rem 1rem;
    }
    
    .header {
      margin-bottom: 2rem;
    }
    
    .gallery-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .arrow {
      transform: rotate(90deg);
    }
  }
</style>
