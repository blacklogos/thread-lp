---
const { content } = Astro.props;
const items = Array.isArray(content?.items) ? content.items : [];
const title = content?.title ?? "";
const subtitle = content?.subtitle ?? "";
---

<section class="gallery">
  <div class="container">
    <div class="header">
      <h2>{title}</h2>
      <p>{subtitle}</p>
    </div>
    
    <div class="gallery-grid">
      {items.map((item: any) => (
        <div class="gallery-item">
          <div class="gallery-before">
            <div class="label">Before</div>
            <p>{item.before}</p>
          </div>
          <div class="arrow">â†’</div>
          <div class="gallery-after">
            <div class="label">After</div>
            <p>{item.after}</p>
          </div>
          <div class="category">{item.category}</div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .gallery {
    padding: 6rem 2rem;
    background: var(--bg-light);
  }
  
  .container {
    max-width: 1040px;
    margin: 0 auto;
  }
  
  .header {
    text-align: center;
    margin-bottom: 4rem;
  }
  
  .header h2 {
    margin-bottom: 1rem;
  }
  
  .header p {
    font-size: 18px;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }
  
  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  .gallery-item {
    background: var(--background);
    border: 1px solid var(--border-light);
    border-radius: 16px;
    padding: 1.5rem;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    box-shadow: var(--shadow-sm);
  }
  
  .gallery-item:hover {
    border-color: var(--orange-light);
    box-shadow: var(--shadow-lg);
    transform: translateY(-2px);
  }
  
  .gallery-before,
  .gallery-after {
    flex: 1;
    padding: 1rem;
    border-radius: 8px;
  }
  
  .gallery-before {
    background: rgba(239, 68, 68, 0.1);
    border-left: 3px solid #dc2626;
  }
  
  .gallery-after {
    background: rgba(16, 185, 129, 0.1);
    border-left: 3px solid #059669;
  }
  
  .label {
    font-weight: 600;
    font-size: 12px;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .gallery-before .label {
    color: #991b1b;
  }
  
  .gallery-after .label {
    color: #065f46;
  }
  
  .gallery-before p {
    color: #7f1d1d;
    margin: 0;
    font-size: 14px;
    line-height: 1.5;
  }
  
  .gallery-after p {
    color: #047857;
    margin: 0;
    font-size: 14px;
    line-height: 1.5;
  }
  
  .arrow {
    text-align: center;
    font-size: 20px;
    color: var(--orange-mid);
    font-weight: bold;
  }
  
  .category {
    font-size: 12px;
    background: var(--orange-gradient);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    width: fit-content;
    font-weight: 600;
  }
  
  @media (max-width: 768px) {
    .gallery {
      padding: 4rem 1rem;
    }
    
    .header {
      margin-bottom: 2rem;
    }
    
    .gallery-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .arrow {
      transform: rotate(90deg);
    }
  }
</style>
