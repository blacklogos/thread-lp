---
const { content } = Astro.props;
---

<section class="relative min-h-[90vh] flex items-center justify-center px-6 lg:px-8 overflow-hidden">
  <div class="max-w-7xl mx-auto w-full">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
      <!-- Content -->
      <div class="space-y-8 text-center lg:text-left">
        <div class="space-y-4">
          <h1 class="text-5xl lg:text-7xl font-display font-bold leading-tight">
            <span class="bg-gradient-threads bg-clip-text text-transparent">
              Never Lose
            </span>
            <br />
            <span class="text-text-primary">
              a Great Threads
            </span>
            <br />
            <span class="text-text-primary">
              Conversation Again
            </span>
          </h1>

          <p class="text-xl lg:text-2xl text-text-secondary max-w-2xl">
            {content.subheadline}
          </p>
        </div>

        {content.copy && (
          <div class="space-y-4 text-text-secondary max-w-2xl">
            {content.copy.split('\n\n').map((paragraph: string) => (
              <p class="text-base lg:text-lg leading-relaxed">{paragraph}</p>
            ))}
          </div>
        )}

        <!-- Trust Indicators -->
        <div class="space-y-3">
          {content.trustIndicators.map((indicator: any) => (
            <div class="flex items-center gap-3 justify-center lg:justify-start">
              <span class="text-2xl">{indicator.icon}</span>
              <span class="text-text-secondary">{indicator.label}</span>
            </div>
          ))}
        </div>

        <!-- CTAs -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <div class="space-y-2">
            <a href="https://chrome.google.com/webstore"
               class="inline-block px-8 py-4 bg-gradient-threads text-white rounded-xl font-semibold text-lg hover:shadow-glow transition-all duration-300 hover:scale-105"
               target="_blank"
               rel="noopener noreferrer">
              {content.cta}
            </a>
            {content.ctaMicrocopy && (
              <p class="text-sm text-text-muted text-center lg:text-left">{content.ctaMicrocopy}</p>
            )}
          </div>

          <a href="#how-it-works"
             class="inline-block px-8 py-4 border border-dark-border text-text-primary rounded-xl font-semibold text-lg hover:border-text-secondary transition-all duration-300">
            {content.secondaryCTA}
          </a>
        </div>
      </div>

      <!-- Visual -->
      <div class="relative">
        <div class="relative rounded-2xl border border-dark-border bg-dark-surface/50 backdrop-blur-sm p-8 lg:p-12">
          <!-- Threads Logo inspired visual -->
          <div class="absolute inset-0 bg-gradient-radial from-threads-orange/10 via-threads-yellow/5 to-transparent rounded-2xl"></div>

          <div class="relative space-y-6">
            <!-- Mock thread card -->
            <div class="bg-dark-bg/80 rounded-xl p-6 border border-dark-border space-y-4">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-gradient-threads"></div>
                <div>
                  <div class="h-3 w-24 bg-text-muted/30 rounded"></div>
                  <div class="h-2 w-16 bg-text-muted/20 rounded mt-2"></div>
                </div>
              </div>
              <div class="space-y-2">
                <div class="h-3 w-full bg-text-muted/30 rounded"></div>
                <div class="h-3 w-5/6 bg-text-muted/30 rounded"></div>
                <div class="h-3 w-4/6 bg-text-muted/30 rounded"></div>
              </div>
            </div>

            <!-- Another mock thread card -->
            <div class="bg-dark-bg/80 rounded-xl p-6 border border-dark-border space-y-4 opacity-75">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-accent-cyan/50"></div>
                <div>
                  <div class="h-3 w-24 bg-text-muted/30 rounded"></div>
                  <div class="h-2 w-16 bg-text-muted/20 rounded mt-2"></div>
                </div>
              </div>
              <div class="space-y-2">
                <div class="h-3 w-full bg-text-muted/30 rounded"></div>
                <div class="h-3 w-3/4 bg-text-muted/30 rounded"></div>
              </div>
            </div>

            <!-- Caption -->
            <p class="text-center text-sm text-text-muted italic pt-4">
              Same thread. Clean reading. All yours.
            </p>
          </div>
        </div>

        <!-- Decorative glow elements -->
        <div class="absolute -top-4 -right-4 w-32 h-32 bg-threads-orange/30 rounded-full blur-3xl"></div>
        <div class="absolute -bottom-4 -left-4 w-32 h-32 bg-threads-yellow/30 rounded-full blur-3xl"></div>
      </div>
    </div>
  </div>
</section>
