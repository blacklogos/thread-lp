---
const { content } = Astro.props;
---

<section class="hero">
  <div class="hero-content">
    <h1>{content.headline}</h1>
    <p class="subheadline">{content.subheadline}</p>
    
    <div class="hero-ctas">
      <a href="https://chrome.google.com/webstore" class="primary-cta" target="_blank" rel="noopener noreferrer" data-track="cta-hero-primary">
        {content.cta}
      </a>
      <a href="#how-it-works" class="secondary-cta" data-track="cta-hero-secondary">
        {content.secondaryCTA}
      </a>
    </div>
    
    <div class="stats">
      {content.stats.map((stat: any) => (
        <div class="stat">
          <div class="stat-value">{stat.value}</div>
          <div class="stat-label">{stat.label}</div>
        </div>
      ))}
    </div>
  </div>
  
  <div class="hero-visual">
    <div class="gradient-box"></div>
  </div>
</section>

<style>
  .hero {
    max-width: 1200px;
    margin: 0 auto;
    padding: 6rem 2rem;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }
  
  .hero-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }
  
  .hero h1 {
    background: linear-gradient(135deg, #000 0%, #0095f6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .subheadline {
    font-size: 1.25rem;
    color: #65676b;
    line-height: 1.6;
  }
  
  .hero-ctas {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }
  
  .primary-cta, .secondary-cta {
    padding: 1rem 2rem;
    border-radius: 8px;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
    cursor: pointer;
    border: 2px solid transparent;
    white-space: nowrap;
  }
  
  .primary-cta {
    background: #0095f6;
    color: white;
  }
  
  .primary-cta:hover {
    background: #0084d9;
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 149, 246, 0.3);
  }
  
  .secondary-cta {
    background: transparent;
    color: #0095f6;
    border: 2px solid #0095f6;
  }
  
  .secondary-cta:hover {
    background: #f0f8ff;
    transform: translateY(-2px);
  }
  
  .stats {
    display: flex;
    gap: 3rem;
    margin-top: 2rem;
    flex-wrap: wrap;
  }
  
  .stat {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .stat-value {
    font-size: 1.75rem;
    font-weight: 700;
    color: #0095f6;
  }
  
  .stat-label {
    font-size: 0.875rem;
    color: #65676b;
  }
  
  .hero-visual {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 400px;
  }
  
  .gradient-box {
    width: 100%;
    height: 400px;
    background: linear-gradient(135deg, rgba(0, 149, 246, 0.2) 0%, rgba(0, 149, 246, 0.05) 100%);
    border-radius: 16px;
    border: 1px solid rgba(0, 149, 246, 0.1);
  }
  
  @media (max-width: 768px) {
    .hero {
      grid-template-columns: 1fr;
      padding: 4rem 1rem;
      gap: 2rem;
    }
    
    .hero-visual {
      min-height: 300px;
    }
    
    .gradient-box {
      height: 300px;
    }
    
    .stats {
      gap: 2rem;
    }
  }
</style>
