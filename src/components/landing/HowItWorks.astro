---
const { content } = Astro.props;
---

<section id="how-it-works" class="py-24 px-6 lg:px-8 bg-dark-surface/30">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-16 space-y-4">
      <h2 class="text-4xl lg:text-5xl font-display font-bold">{content.title}</h2>
      <p class="text-xl text-text-secondary">{content.subtitle}</p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {content.steps.map((step: any) => (
        <div class="relative">
          <div class="bg-dark-bg/50 backdrop-blur-sm rounded-2xl p-8 border border-dark-border space-y-4 h-full">
            <div class="flex items-center justify-center w-16 h-16 rounded-full bg-gradient-threads text-white text-3xl font-bold shadow-glow">
              {step.number}
            </div>
            <h3 class="text-2xl font-display font-semibold">{step.title}</h3>
            <p class="text-text-secondary leading-relaxed">{step.description}</p>
            {step.detail && (
              <p class="text-sm text-text-muted italic">{step.detail}</p>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
