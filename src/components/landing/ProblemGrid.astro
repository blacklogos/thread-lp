---
const { content } = Astro.props;
---

<section id="problems" class="py-24 px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-16 space-y-4">
      <h2 class="text-4xl lg:text-5xl font-display font-bold">{content.title}</h2>
      <p class="text-xl text-text-secondary max-w-2xl mx-auto">{content.subtitle}</p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {content.items.map((item: any) => (
        <div class="group relative bg-dark-surface/50 backdrop-blur-sm rounded-2xl p-8 border border-dark-border hover:border-threads-orange/50 transition-all duration-300">
          <div class="absolute inset-0 bg-gradient-radial from-threads-orange/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity rounded-2xl"></div>

          <div class="relative space-y-4">
            <div class="text-5xl">{item.icon}</div>
            <h3 class="text-2xl font-display font-semibold">{item.title}</h3>
            <p class="text-text-secondary leading-relaxed">{item.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
