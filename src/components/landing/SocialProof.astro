---
const { content } = Astro.props;
---

<section class="py-24 px-6 lg:px-8 bg-dark-surface/30">
  <div class="max-w-5xl mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-4xl lg:text-5xl font-display font-bold">{content.title}</h2>
    </div>

    <div class="grid md:grid-cols-2 gap-6">
      {content.stats.map((stat: any) => (
        <div class="flex items-center gap-4 bg-dark-bg/50 backdrop-blur-sm rounded-xl p-6 border border-dark-border">
          <span class="text-3xl">{stat.icon}</span>
          <span class="text-lg text-text-secondary">{stat.label}</span>
        </div>
      ))}
    </div>
  </div>
</section>
