---
import TestimonialCarousel from '../TestimonialCarousel';
const { content } = Astro.props;
---

<section class="social-proof">
  <div class="container">
    <div class="header">
      <h2>Loved by Creators</h2>
      <p>See what real users say about Thread to HTML</p>
    </div>
    
    <TestimonialCarousel testimonials={content} client:load />
  </div>
</section>

<style>
  .social-proof {
    padding: 6rem 2rem;
    background: white;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .header {
    text-align: center;
    margin-bottom: 4rem;
  }
  
  .header h2 {
    margin-bottom: 0.5rem;
  }
  
  .header p {
    font-size: 1.125rem;
    color: #65676b;
  }
  
  @media (max-width: 768px) {
    .social-proof {
      padding: 4rem 1rem;
    }
    
    .testimonials {
      grid-template-columns: 1fr;
    }
  }
</style>
