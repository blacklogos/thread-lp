---
const { content } = Astro.props;
---

<section class="py-24 px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-16 space-y-4">
      <h2 class="text-4xl lg:text-5xl font-display font-bold">{content.title}</h2>
      <p class="text-xl text-text-secondary">{content.subtitle}</p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {content.items.map((item: any) => (
        <div class="group bg-gradient-radial from-dark-surface to-dark-bg rounded-2xl p-8 border border-dark-border hover:border-accent-cyan/50 transition-all duration-300 text-center">
          <div class="text-6xl mb-6">{item.emoji}</div>
          <h3 class="text-2xl font-display font-semibold mb-4">{item.title}</h3>
          <p class="text-text-secondary leading-relaxed">{item.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
