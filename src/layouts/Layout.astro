---
interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
}

const baseURL = Astro.site?.href || 'https://threadtohtml.com';
const { title = "Never Lose a Great Threads Conversation Again", description = "Free Chrome extension to save and archive Threads posts. Read your favorite threads offline, anytime. Privacy-first. No signup required.", image = "/og-image.png", canonicalURL = new URL(Astro.url.pathname, baseURL) } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#010101" />
    
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />
    
    <link rel="canonical" href={canonicalURL} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="bg-dark-bg text-text-primary antialiased">
    <!-- Gradient Background Effects -->
    <div class="fixed inset-0 -z-10 overflow-hidden">
      <div class="absolute top-0 left-1/4 w-96 h-96 bg-threads-orange/20 rounded-full blur-3xl"></div>
      <div class="absolute top-1/3 right-1/4 w-96 h-96 bg-threads-yellow/20 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 left-1/2 w-96 h-96 bg-accent-cyan/10 rounded-full blur-3xl"></div>
    </div>

    <nav class="fixed top-0 left-0 right-0 z-50 bg-dark-bg/80 backdrop-blur-xl border-b border-dark-border">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <a href="/" class="flex items-center gap-3 group">
            <div class="w-8 h-8 bg-gradient-threads rounded-lg flex items-center justify-center shadow-glow group-hover:shadow-glow transition-shadow">
              <span class="text-white font-bold text-lg">T</span>
            </div>
            <span class="font-display font-semibold text-lg">Thread to HTML</span>
          </a>

          <div class="hidden md:flex items-center gap-8">
            <a href="#features" class="text-text-secondary hover:text-text-primary transition-colors">Features</a>
            <a href="#how-it-works" class="text-text-secondary hover:text-text-primary transition-colors">How It Works</a>
            <a href="#faq" class="text-text-secondary hover:text-text-primary transition-colors">FAQ</a>
          </div>

          <a href="https://chrome.google.com/webstore"
             class="px-6 py-2.5 bg-gradient-threads text-white rounded-lg font-medium hover:shadow-glow transition-all duration-300 hover:scale-105"
             target="_blank"
             rel="noopener noreferrer">
            Add to Chrome
          </a>
        </div>
      </div>
    </nav>

    <main class="pt-16">
      <slot />
    </main>
  </body>
</html>
