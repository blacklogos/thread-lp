---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/landing/Hero.astro";
import ProblemGrid from "../components/landing/ProblemGrid.astro";
import FeatureGrid from "../components/landing/FeatureGrid.astro";
import HowItWorks from "../components/landing/HowItWorks.astro";
import UseCases from "../components/landing/UseCases.astro";
import TechHighlights from "../components/landing/TechHighlights.astro";
import Gallery from "../components/landing/Gallery.astro";
import FeatureTabs from "../components/FeatureTabs";
import ComparisonTable from "../components/landing/ComparisonTable.astro";
import LivePreview from "../components/landing/LivePreview.astro";
import SocialProof from "../components/landing/SocialProof.astro";
import FAQ from "../components/landing/FAQ.astro";
import FinalCTA from "../components/landing/FinalCTA.astro";
import Footer from "../components/landing/Footer.astro";
import NewsletterForm from "../components/NewsletterForm";
import { landingContent } from "../content/landing";

const softwareAppSchema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "Thread to HTML",
  "description": "Convert Twitter/X Threads to embeddable HTML instantly",
  "url": "https://threadtohtml.com",
  "applicationCategory": "UtilityApplication",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD"
  }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": landingContent.faq.map((item: any) => ({
    "@type": "Question",
    "name": item.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": item.answer
    }
  }))
};
---

<Layout>
  <Hero content={landingContent.hero} />
  <ProblemGrid content={landingContent.problems} />
  <FeatureGrid content={landingContent.features} />
  <HowItWorks content={landingContent.howItWorks} />
  <UseCases content={landingContent.useCases} />
  <TechHighlights content={landingContent.techHighlights} />
  <Gallery content={landingContent.gallery} />
  
  <section style="padding: 6rem 2rem; background: white;">
    <div style="max-width: 1200px; margin: 0 auto;">
      <h2 style="text-align: center; margin-bottom: 1rem;">{landingContent.featureTabs.title}</h2>
      <p style="text-align: center; margin-bottom: 3rem; color: #65676b;">{landingContent.featureTabs.subtitle}</p>
      <FeatureTabs tabs={landingContent.featureTabs.tabs} client:load />
    </div>
  </section>
  
  <ComparisonTable content={landingContent.comparison} comparisonViews={landingContent.comparisonViews} />
  <LivePreview content={landingContent.livePreview} />
  <SocialProof content={landingContent.testimonials} />
  <FAQ content={landingContent.faq} />
  
  <section style="padding: 6rem 2rem; background: white; text-align: center;">
    <div style="max-width: 600px; margin: 0 auto;">
      <h2>Stay Updated</h2>
      <p>Get the latest features and updates delivered to your inbox.</p>
      <NewsletterForm client:load />
    </div>
  </section>
  
  <FinalCTA />
  <Footer content={landingContent.footer} />
  
  <script type="application/ld+json" set:html={JSON.stringify(softwareAppSchema)} is:inline />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} is:inline />
</Layout>
